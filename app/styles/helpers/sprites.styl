/*
Stylus variables are information about icon's compiled state, stored under its original file name

.icon-home {
  width: $icon_home_width;
}

The large array-like variables contain all information about a single icon
$icon_home = x y offset_x offset_y width height total_width total_height image_path;
*/
$sprite-logo_x = 0px;
$sprite-logo_y = 0px;
$sprite-logo_offset_x = 0px;
$sprite-logo_offset_y = 0px;
$sprite-logo_width = 658px;
$sprite-logo_height = 257px;
$sprite-logo_total_width = 658px;
$sprite-logo_total_height = 257px;
$sprite-logo_image = '../images/sprites.png';
$sprite-logo = 0px 0px 0px 0px 658px 257px 658px 257px '../images/sprites.png';

/*
The provided mixins are intended to be used with the array-like variables

.icon-home {
  spriteWidth($icon_home)
}

.icon-email {
  sprite($icon_email)
}
*/
spriteWidth($sprite) {
  width: $sprite[4];
}

spriteHeight($sprite) {
  height: $sprite[5];
}

spritePosition($sprite) {
  background-position: $sprite[2] $sprite[3];
}

spriteImage($sprite) {
  background-image: url($sprite[8]);
}

sprite($sprite) {
  spriteImage($sprite)
  spritePosition($sprite)
  spriteWidth($sprite)
  spriteHeight($sprite)
}
